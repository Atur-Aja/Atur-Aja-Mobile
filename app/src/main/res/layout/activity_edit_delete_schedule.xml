    <!--                android:paddingVertical="16dp"-->
    <!--                android:textSize="16dp" />-->

    <!--        </com.google.android.material.textfield.TextInputLayout>-->

    <Spinner
        android:id="@+id/repeat_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/icon_repeat"
        app:layout_constraintTop_toBottomOf="@+id/title_repeat" />

    <Spinner
        android:id="@+id/notification_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/icon_notification"
        app:layout_constraintTop_toBottomOf="@+id/title_Notification" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <Button
        android:id="@+id/save"
        android:layout_width="124dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/aturaja"
        android:fontFamily="@font/mulish_bold"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_notification" />

    <Button
        android:id="@+id/delete"
        android:layout_width="124dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_button_red"
        android:fontFamily="@font/mulish_bold"
        android:text="Delete"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/icon_notification" />

    <TextView
        android:id="@+id/edit_text_to_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_to_edit_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/button_to_edit_delete_schedule"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@+id/title_to_edit_delete_schedule" />


</androidx.constraintlayout.widget.ConstraintLayout>