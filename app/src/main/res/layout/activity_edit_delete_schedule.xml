<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditDeleteSchedule">

    <ImageButton
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.5dp"
        android:layout_marginTop="14.5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_exit_schedule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/mulish_bold"
        android:text="Edit Schedule"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Title"
        android:textColor="@color/abuabu"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Title"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <ImageView
        android:id="@+id/icon_description"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/edit_text_title"
        app:srcCompat="@drawable/icon_description_addschedule" />

    <TextView
        android:id="@+id/descriptiton_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:text="Description"
        android:textColor="@color/abuabu"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/icon_description"
        app:layout_constraintTop_toTopOf="@+id/icon_description" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Description"
        app:layout_constraintStart_toEndOf="@id/icon_description"
        app:layout_constraintTop_toBottomOf="@id/descriptiton_title" />

    <ImageView
        android:id="@+id/icon_people"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/icon_description"
        app:srcCompat="@drawable/icon_people_addschedule" />

    <TextView
        android:id="@+id/title_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:text="People"
        android:textColor="@color/abuabu"
        app:layout_constraintStart_toEndOf="@id/icon_people"
        app:layout_constraintTop_toTopOf="@+id/icon_people" />

    <EditText
        android:id="@+id/edit_text_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Search"
        app:layout_constraintStart_toEndOf="@id/icon_people"
        app:layout_constraintTop_toBottomOf="@id/title_people" />

    <ImageView
        android:id="@+id/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/edit_text_people"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_people"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/icon_people"
        app:srcCompat="@drawable/icon_location_xml" />

    <TextView
        android:id="@+id/title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Location"
        android:textColor="@color/abuabu"
        app:layout_constraintStart_toEndOf="@id/icon_location"
        app:layout_constraintTop_toBottomOf="@id/icon_people" />

    <EditText
        android:id="@+id/edit_text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Google Meet"
        app:layout_constraintStart_toEndOf="@id/icon_location"
        app:layout_constraintTop_toBottomOf="@id/title_location" />

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_location"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/edit_text_location"
        app:srcCompat="@drawable/ic_baseline_edit" />

    <ImageView
        android:id="@+id/icon_time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/icon_location"
        app:srcCompat="@drawable/icon_time_xml" />

    <TextView
        android:id="@+id/title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Time"
        android:textColor="@color/abuabu"
        app:layout_constraintStart_toEndOf="@id/icon_time"
        app:layout_constraintTop_toBottomOf="@id/icon_location" />

    <TextView
        android:id="@+id/title_date_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:text="Date :"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/icon_time"
        app:layout_constraintTop_toBottomOf="@id/title_time" />

    <TextView
        android:id="@+id/edit_text_date_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title_date_edit_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/button_date_edit_delete_schedule"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@+id/title_date_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/title_date_edit_delete_schedule"
        />

    <TextView
        android:id="@+id/title_from_edi_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mulish_regular"
        android:text="From : "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/icon_time"
        app:layout_constraintStart_toEndOf="@id/icon_time"
        app:layout_constraintTop_toBottomOf="@id/title_date_edit_delete_schedule" />

    <TextView
        android:id="@+id/edit_text_time_from_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/button_from_time_edit_delete_schedule"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/title_from_edi_delete_schedule" />

    <ImageButton
        android:id="@+id/button_from_time_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintStart_toEndOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule"
        app:srcCompat="@drawable/icon_time_from_xml" />

    <ImageButton
        android:id="@+id/button_date_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title_date_edit_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@id/title_date_edit_delete_schedule"
        app:srcCompat="@drawable/icon_time_from_xml" />

    <TextView
        android:id="@+id/title_to_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/mulish_regular"
        android:text="To : "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/button_to_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule" />

    <ImageButton
        android:id="@+id/button_to_edit_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_edit_delete_schedule"
        app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule"
        app:srcCompat="@drawable/icon_time_from_xml" />

    <ImageView
        android:id="@+id/icon_repeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/icon_time"
        app:srcCompat="@drawable/icon_repeat_xml" />

    <TextView
        android:id="@+id/title_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:text="Repeat"
        android:textColor="@color/abuabu"
        app:layout_constraintStart_toEndOf="@id/icon_repeat"
        app:layout_constraintTop_toTopOf="@+id/icon_repeat" />

