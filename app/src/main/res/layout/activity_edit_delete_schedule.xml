    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:background="@null"-->
    <!--                android:inputType="none" />-->

    <!--        </com.google.android.material.textfield.TextInputLayout>-->

    <ImageView
        android:id="@+id/icon_notification"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_edit_delete_schedule"
        app:layout_constraintTop_toBottomOf="@id/icon_repeat"
        app:srcCompat="@drawable/icon_repeat_xml" />

    <TextView
        android:id="@+id/title_Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_regular"
        android:text="Notification"
        android:textColor="@color/abuabu"
        app:layout_constraintStart_toEndOf="@id/icon_notification"
        app:layout_constraintTop_toTopOf="@+id/icon_notification" />

    <!--        <com.google.android.material.textfield.TextInputLayout-->
    <!--            android:id="@+id/notification_repeat"-->
    <!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"-->
