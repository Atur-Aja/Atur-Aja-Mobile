<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.AddScheduleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.5dp"
            android:layout_marginTop="14.5dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_exit_schedule"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mulish_bold"
            android:text="New Schedule"
            android:textColor="@color/black"
            android:textSize="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="53dp"
            android:textSize="14dp"
            android:fontFamily="@font/mulish_regular"
            android:textColor="@color/abuabu"
            android:text="Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:hint="Add Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text_view"
            />

        <ImageView
            android:id="@+id/icon_description"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/edit_text_title"
            app:srcCompat="@drawable/icon_description_addschedule" />

        <TextView
            android:id="@+id/descriptiton_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="Description"
            android:textColor="@color/abuabu"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/icon_description"
            app:layout_constraintTop_toTopOf="@+id/icon_description" />

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Add Description"
            app:layout_constraintStart_toEndOf="@id/icon_description"
            app:layout_constraintTop_toBottomOf="@id/descriptiton_title"/>

        <ImageView
            android:id="@+id/icon_people"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/icon_description"
            app:srcCompat="@drawable/icon_people_addschedule" />

        <TextView
            android:id="@+id/title_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="People"
            android:textColor="@color/abuabu"
            app:layout_constraintStart_toEndOf="@id/icon_people"
            app:layout_constraintTop_toTopOf="@+id/icon_people" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_add_schedule"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Add friends"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/icon_people"
            app:layout_constraintTop_toBottomOf="@+id/title_people" />

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_addSchedule"
            app:srcCompat="@drawable/icon_location_xml" />

        <TextView
            android:id="@+id/title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="Location"
            android:textColor="@color/abuabu"
            app:layout_constraintStart_toEndOf="@id/icon_location"
            app:layout_constraintTop_toTopOf="@+id/icon_location" />

        <EditText
            android:id="@+id/edit_text_location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Google Meet"
            app:layout_constraintTop_toBottomOf="@id/title_location"
            app:layout_constraintStart_toEndOf="@id/icon_location"/>

        <ImageView
            android:id="@+id/icon_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/icon_location"
            app:srcCompat="@drawable/icon_time_xml" />

        <TextView
            android:id="@+id/title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mulish_regular"
            android:textColor="@color/abuabu"
            app:layout_constraintStart_toEndOf="@id/icon_time"
            app:layout_constraintTop_toBottomOf="@id/icon_location"/>

        <TextView
            android:id="@+id/title_date_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:fontFamily="@font/mulish_regular"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/icon_time"
            app:layout_constraintTop_toBottomOf="@id/title_time"/>

        <TextView
            android:id="@+id/edit_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginStart="0dp"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintEnd_toStartOf="@+id/button_date_add_schedule"
            app:layout_constraintStart_toEndOf="@+id/title_date_add_schedule"
            app:layout_constraintTop_toBottomOf="@id/title_time" />

        <TextView
            android:id="@+id/title_to_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/mulish_regular"
            android:text="To : "
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
            app:layout_constraintEnd_toStartOf="@+id/button_to_time"
            app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule" />

        <TextView
            android:id="@+id/title_from_edi_delete_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mulish_regular"
            android:text="From : "
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/icon_time"
            app:layout_constraintStart_toEndOf="@id/icon_time"
            app:layout_constraintTop_toBottomOf="@id/title_date_add_schedule" />

        <TextView
            android:id="@+id/edit_text_time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/icon_time"
            app:layout_constraintEnd_toStartOf="@+id/button_from_time"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/title_from_edi_delete_schedule"
            app:layout_constraintTop_toBottomOf="@+id/title_date_add_schedule" />

        <ImageButton
            android:id="@+id/button_date_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/title_date_add_schedule"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_add_schedule"
            app:layout_constraintTop_toBottomOf="@id/title_time"
            app:srcCompat="@drawable/icon_time_from_xml" />

        <ImageButton
            android:id="@+id/button_from_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/title_from_edi_delete_schedule"
            app:layout_constraintStart_toEndOf="@+id/title_from_edi_delete_schedule"
            app:layout_constraintTop_toTopOf="@+id/title_from_edi_delete_schedule"
            app:layout_constraintVertical_bias="0.4"
            app:srcCompat="@drawable/icon_time_from_xml" />

        <ImageButton
            android:id="@+id/button_to_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/edit_text_time_to"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_add_schedule"
            app:layout_constraintTop_toTopOf="@+id/edit_text_time_to"
            app:srcCompat="@drawable/icon_time_from_xml" />

        <ImageView
            android:id="@+id/icon_repeat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/auto_complete_recomendation_add_schedule"
            app:srcCompat="@drawable/icon_repeat_xml" />

        <TextView
            android:id="@+id/title_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="Repeat"
            android:textColor="@color/abuabu"
            app:layout_constraintStart_toEndOf="@id/icon_repeat"
            app:layout_constraintTop_toTopOf="@+id/icon_repeat" />

        <ImageView
            android:id="@+id/icon_notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/icon_repeat"
            app:srcCompat="@drawable/icon_notification" />

        <TextView
            android:id="@+id/title_Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="Notification"
            android:textColor="@color/abuabu"
            app:layout_constraintStart_toEndOf="@id/icon_notification"
            app:layout_constraintTop_toTopOf="@+id/icon_notification" />

        <Spinner
            android:id="@+id/repeat_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/icon_repeat"
            app:layout_constraintTop_toBottomOf="@+id/title_repeat" />

        <Spinner
            android:id="@+id/notification_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintStart_toEndOf="@+id/icon_notification"
            app:layout_constraintTop_toBottomOf="@+id/title_Notification" />

        <Button
            android:id="@+id/save"
            android:layout_width="124dp"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/aturaja"
            android:fontFamily="@font/mulish_regular"
            android:onClick="saveScheduleClick"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_notification" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.91" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.09" />

        <TextView
            android:id="@+id/edit_text_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/title_to_add_schedule"
            app:layout_constraintEnd_toStartOf="@+id/button_to_time"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/title_to_add_schedule"
            app:layout_constraintTop_toTopOf="@+id/title_to_add_schedule" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_addSchedule"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_add_schedule"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/auto_complete_add_schedule" />

        <ImageView
            android:id="@+id/icon_recomendatio_add_schedule"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/icon_time"
            app:srcCompat="@drawable/icon_recomendation" />

        <TextView
            android:id="@+id/title_recomendation_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendation"
            app:layout_constraintStart_toEndOf="@+id/icon_recomendatio_add_schedule"
            app:layout_constraintTop_toTopOf="@+id/icon_recomendatio_add_schedule" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_recomendation_add_schedule"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Recomendations"
            app:layout_constraintStart_toEndOf="@+id/icon_recomendatio_add_schedule"
            app:layout_constraintTop_toBottomOf="@+id/title_recomendation_add_schedule" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>