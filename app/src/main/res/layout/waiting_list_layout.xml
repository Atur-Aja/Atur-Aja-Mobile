    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewFriends"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Nama Orang"
        android:fontFamily="@font/mulish_semi_bold"
        android:textColor="#141414"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFriendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="email@perusahaan.com"
        android:fontFamily="@font/mulish_regular"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toBottomOf="@+id/textViewFriendName" />

    <Button
        android:id="@+id/buttonIgnore"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:backgroundTint="#D7D7D7"
        android:fontFamily="@font/mulish_semi_bold"
        android:text="Ignore"
        android:textAllCaps="false"
        android:textColor="#141414"
        android:textSize="9sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAccept"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:backgroundTint="#50D890"
        android:fontFamily="@font/mulish_semi_bold"
        android:text="Accept"
        android:textAllCaps="false"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>